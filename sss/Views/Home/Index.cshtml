@{
	ViewData["Title"] = "Home Page";
}
<script>
	$(document).ready(function () {

		$(".a-menu").click(function () {
			$(".a-menu").closest("li").removeClass("current");
			$(this).closest("li").addClass("current");

		});

	});
</script>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
		<div class="container-fluid">
			<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
				<ul class="navbar-nav flex-grow-1">
					<li class="navbar-brand">Staff Suggestion System</li>
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span class="fas fa-home"></span> Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
					</li>
				</ul>
			</div>
			<ul class="navbar-nav justify-content-end navbar-right-account">
				<li class="nav-item " style="margin-top:15px;">
					<p style="text-transform:capitalize;font-size:15px;padding-top:3px;"><span class="fas fa-user" style="margin-right:5px;"></span>Welcome @TempData["username"]</p>
				</li>
			</ul>
		</div>
	</nav>
</header>
<div class="container-fluid logo">
	<img class="rounded" src="~/img/supreme.png" alt="logo" style="margin-left:-20px">
</div>
