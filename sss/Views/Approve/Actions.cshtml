@model sss.Models.Suggestion

@{
    ViewData["Title"] = "Acctions Suggestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="margin-top:10px ;color: mediumblue;">Actions Suggestion <span style="font-size:12px; color: brown">@ViewBag.Role</span> </h3>

<div class="row" style="margin-right:0px">
    <div class="col-md-8">
        <form asp-action="Actions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="parent">
                <label asp-for="Id" class="control-label"></label>
                <input name="Id" asp-for="Id" class="form-control" type="text" readonly />
            </div>
            <div class="form-group" id="parent">
                <label asp-for="Title" class="control-label"></label>
                <input name="Title" asp-for="Title" class="form-control" type="text" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Creator" class="control-label"></label>
                <input name="Creator" asp-for="Creator" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" style="height:200px;" cols="40" asp-for="Description" class="form-control" readonly></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImplementDate" class="control-label"></label>
                <input name="ImplementDate" asp-for="ImplementDate" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input name="CreatedDate" asp-for="CreatedDate" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input name="UpdatedDate" asp-for="UpdatedDate" type="text" class="form-control" readonly>
            </div>

            @if (ViewBag.Role == "Router")
            {
                <div class="form-group">
                    <label asp-for="Userid" class="control-label"></label>
                    <select asp-for="Userid" class="custom-select">
                        @if (ViewBag.Managers != null)
                        {
                            @foreach (var user in ViewBag.Managers)
                            {
                                <option value=@user.Userid>@user.Username - @user.Department - @user.Userid</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Userid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RemarkFromApprover" class="control-label"></label>
                    <textarea name="RemarkFromApprover" style="height:100px;" cols="40" asp-for="RemarkFromApprover" class="form-control"></textarea>
                    <span asp-validation-for="RemarkFromApprover" class="text-danger"></span>
                </div>
               
            }
            else if (ViewBag.Role == "Manager")
            {
                <div class="form-group">
                    <label asp-for="RemarkFromApprover" class="control-label"></label>
                    <textarea name="RemarkFromApprover" style="height:100px;" cols="40" asp-for="RemarkFromApprover" class="form-control"></textarea>
                    <span asp-validation-for="RemarkFromApprover" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RewardMoney" class="control-label"></label>
                    
                    <div class="input-group">
                        <input name="RewardMoney" asp-for="RewardMoney" type="number" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-info ml-1" type="button" disabled>Get</button>
                        </span>
                    </div>
                    <span asp-validation-for="RewardMoney" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusType" class="control-label"></label>
                    <select asp-for="StatusType" class="custom-select">
                        <option value="Approve">Approve</option>
                        <option value="Reject">Reject</option>
                    </select>
                    <span asp-validation-for="StatusType" class="text-danger"></span>
                </div>

            }
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <button class="btn btn-danger">Reject</button>
                <input type="button" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<script>

</script>
